{
    "$schema": "https://developer.microsoft.com/json-schemas/copilot/plugin-action/v1.0/schema.json",
    "id": "add_comment",
    "title": "Agregar Comentario",
    "description": "Agrega un comentario a una tarea específica para colaboración del equipo",
    "operation": {
        "url": "/api/agent/add-comment",
        "method": "POST"
    },
    "parameters": {
        "type": "object",
        "properties": {
            "tarea_id": {
                "type": "string",
                "description": "ID de la tarea a la que agregar el comentario"
            },
            "texto": {
                "type": "string",
                "description": "Texto del comentario"
            }
        },
        "required": [
            "tarea_id",
            "texto"
        ]
    }
}