{
    "$schema": "https://developer.microsoft.com/json-schemas/copilot/plugin-action/v1.0/schema.json",
    "id": "move_task",
    "title": "Mover Tarea",
    "description": "Mueve una tarea entre columnas del tablero Kanban (Por Hacer, En Progreso, Completado)",
    "operation": {
        "url": "/api/agent/move-task",
        "method": "POST"
    },
    "parameters": {
        "type": "object",
        "properties": {
            "tarea_id": {
                "type": "string",
                "description": "ID de la tarea a mover"
            },
            "nueva_columna": {
                "type": "string",
                "enum": [
                    "por_hacer",
                    "en_progreso",
                    "completado"
                ],
                "description": "Nueva columna en el tablero Kanban"
            }
        },
        "required": [
            "tarea_id",
            "nueva_columna"
        ]
    }
}