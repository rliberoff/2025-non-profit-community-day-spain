{
    "$schema": "https://developer.microsoft.com/json-schemas/copilot/plugin-action/v1.0/schema.json",
    "id": "assign_task",
    "title": "Asignar Tarea",
    "description": "Asigna una tarea a un miembro del equipo",
    "operation": {
        "url": "/api/agent/assign-task",
        "method": "POST"
    },
    "parameters": {
        "type": "object",
        "properties": {
            "tarea_id": {
                "type": "string",
                "description": "ID de la tarea a asignar"
            },
            "usuario_id": {
                "type": "string",
                "description": "ID del usuario al que asignar la tarea"
            }
        },
        "required": [
            "tarea_id",
            "usuario_id"
        ]
    }
}