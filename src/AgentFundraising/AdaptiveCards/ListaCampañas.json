{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.5",
    "body": [
        {
            "type": "TextBlock",
            "text": "Campañas de Recaudación",
            "size": "Large",
            "weight": "Bolder",
            "wrap": true
        },
        {
            "type": "TextBlock",
            "text": "${totalCampañas} campañas activas",
            "size": "Small",
            "color": "Accent",
            "spacing": "None",
            "wrap": true
        },
        {
            "type": "Container",
            "spacing": "Medium",
            "separator": true,
            "items": [
                {
                    "type": "ColumnSet",
                    "$data": "${campañas}",
                    "columns": [
                        {
                            "type": "Column",
                            "width": "stretch",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "${nombre}",
                                    "weight": "Bolder",
                                    "size": "Medium",
                                    "wrap": true
                                },
                                {
                                    "type": "TextBlock",
                                    "text": "Meta: ${meta_euros}€",
                                    "spacing": "None",
                                    "isSubtle": true,
                                    "wrap": true
                                },
                                {
                                    "type": "TextBlock",
                                    "text": "${num_tareas} tareas",
                                    "spacing": "Small",
                                    "size": "Small",
                                    "color": "Accent",
                                    "wrap": true
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "width": "auto",
                            "verticalContentAlignment": "Center",
                            "items": [
                                {
                                    "type": "ActionSet",
                                    "actions": [
                                        {
                                            "type": "Action.Submit",
                                            "title": "Ver tablero",
                                            "data": {
                                                "action": "ver_tablero",
                                                "campaña_id": "${id}"
                                            }
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "➕ Crear nueva campaña",
            "data": {
                "action": "crear_campaña"
            }
        }
    ]
}