{
    "openapi": "3.0.0",
    "info": {
        "title": "Fundraising Agent API",
        "description": "API para interactuar con el agente de recaudación de fondos mediante mensajes de texto en lenguaje natural",
        "version": "1.0.0",
        "contact": {
            "email": "support@example.org"
        }
    },
    "servers": [
        {
            "url": "${{API_URL}}"
        }        
    ],
    "paths": {
        "/agent/chat": {
            "post": {
                "operationId": "chat_with_agent",
                "summary": "Enviar mensaje al agente",
                "description": "Envía un mensaje en lenguaje natural al agente de recaudación de fondos. El agente entiende solicitudes como: crear campañas, listar campañas, agregar tareas, mover tareas, asignar tareas, ver tablero Kanban, listar usuarios, agregar comentarios, ver comentarios, generar mensajes de agradecimiento.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "message": {
                                        "type": "string",
                                        "description": "Mensaje en lenguaje natural para el agente. Ejemplos: 'Crea una campaña llamada Navidad Solidaria con meta de 5000 euros', 'Muestra todas las campañas', 'Agrega una tarea de diseñar flyer a la campaña Navidad Solidaria', 'Muestra el tablero Kanban de la campaña', 'Genera un mensaje de agradecimiento para María que donó a Navidad Solidaria'"
                                    }
                                },
                                "required": ["message"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Respuesta del agente en lenguaje natural",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ChatResponse"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Error al procesar el mensaje",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "ChatResponse": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string",
                        "description": "Respuesta del agente en lenguaje natural"
                    },
                    "timestamp": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Fecha y hora de la respuesta"
                    }
                },
                "required": ["message", "timestamp"]
            },
            "ErrorResponse": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "status": {
                        "type": "integer"
                    },
                    "detail": {
                        "type": "string"
                    }
                }
            }
        }
    }
}